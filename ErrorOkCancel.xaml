<Window x:Class="MARCUS.ErrorOkCancel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MARCUS"
        mc:Ignorable="d"
        Width="600" SizeToContent="Height" Topmost="True" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Background="#FF252525">
            <Image Source="Error.png"/>
            <Label Content="Press skip to skip, stop to stop" Background="#FF252525" HorizontalAlignment="Center"/>
            <DockPanel>
                <Button Content="SKIP" Click="Button_Click" Width="300"/>
                <Button Content="STOP" Click="Button_Click_1" Width="300"/>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>