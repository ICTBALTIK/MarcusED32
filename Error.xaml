<Window x:Class="MARCUS.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MARCUS"
        mc:Ignorable="d"
        Width="600" SizeToContent="Height" Topmost="True" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Background="#FF252525">
            <Image Source="Error.png"/>
            <Label Content="If agente ok, press ok" Background="#FF252525" HorizontalAlignment="Center"/>
            <Button Content="OK" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>